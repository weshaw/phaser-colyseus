{
	"name": "phaser-colyseus",
	"version": "1.0.0",
	"description": "colyseus typescript Phaser 3 using Parceljs",
	"scripts": {
		"dev": "concurrently --kill-others \"npm run start\" \"npm run start-server\"",
		"start": "parcel src/client/index.html -p 8000",
		"start-server": "ts-node-dev --respawn --transpile-only --project tsconfig.server.json src/server/index.ts",
		"build": "parcel build src/client/index.html --out-dir dist",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
	"author": "weshaw",
	"devDependencies": {
		"@types/cors": "^2.8.6",
		"@types/express": "^4.17.1",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"copyfiles": "^2.4.1",
		"eslint": "^6.8.0",
		"minimist": ">=1.2.2",
		"parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.4.3",
		"rimraf": "^2.7.1",
		"ts-node": "^8.1.0",
		"ts-node-dev": "^1.0.0-pre.63",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"@colyseus/arena": "^0.14.9",
		"@colyseus/monitor": "^0.14.0",
		"colyseus": "^0.14.0",
		"colyseus.js": "^0.14.8",
		"concurrently": "^6.0.0",
		"cors": "^2.8.5",
		"express": "^4.16.4",
		"modules": "^0.4.0",
		"phaser": "^3.50.1",
		"phaser3-plugin-isometric": "^0.0.7",
		"regenerator-runtime": "^0.13.7"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	}
}
